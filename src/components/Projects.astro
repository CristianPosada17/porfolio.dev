---
import NextJS from "../components/icons/NextJS.astro"
import Tailwind from "../components/icons/Tailwind.astro"
 const TAGS = {
    NEXT: {
        name: "Next.js",
        class: "bg-black text-white",
        icon: NextJS
    },

    TAILWIND: {
        name:'Tailwind CSS',
        class: 'bg-[#003159] text-white',
        icon: Tailwind
                
    },
 }
 const PROJECTS = [
      
    {
      title:'CP Hardware & Tech',
      description: 'CP Hardware & Tech. Servicio tecnico de mantenimiento y ensamble de Pc sobre pedido',
      link: 'https://cphardwareandtech.com/',
      github: '#',
      image: '/projects/svgl.webp',
      tags: [TAGS.NEXT, TAGS.TAILWIND]
    },
 ]
---

{
    PROJECTS.map(({ image, title, description, tags}) => (
        <article>
            <h3 class="text-2xl font-semibold text-blue-100/80 mb-2">{title}</h3>
            <p class="text-lg mb-4 text-pretty">{description}</p>
            <ul class="flex gap-x-2 flex-row mb-4">
                {tags.map(tag =>(
                    <li>
                        <span 
                        class={`flex gap-x-2  rounded-full text-sm ${tag.class} py-1 px-2`}>
                           <tag.icon class="size-5"/>
                           {tag.name}
                        </span>
                    </li>
                ))}
            </ul>
                
                <img 
                class="rounded shadow-2xl shadow-white/10"
                src={image} 
                alt={`Captura de pantalla del proyecto ${image}`}/>
        </article>
    ))
}